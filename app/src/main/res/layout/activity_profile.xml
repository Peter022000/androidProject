<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".ProfileActivity"
    android:orientation="vertical">

    <include
        layout="@layout/main_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:background="@color/white"
            android:padding="3sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="?attr/editTextBackground"
            android:backgroundTint="@android:color/white"
            android:ems="14"
            android:fontFamily="@font/nunito_bold"
            android:inputType="textPersonName"
            android:text="PROFILE DETAILS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/credentialsView"
        style="@style/ProfileLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Credentials"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/loginView"
        style="@style/ProfileLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/loginField"
        style="@style/ProfileTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />


    <TextView
        android:id="@+id/emailView"
        style="@style/ProfileLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"/>

    <TextView
        android:id="@+id/emailField"
        style="@style/ProfileTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/securityView"
        style="@style/ProfileLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security"
        android:textSize="25sp"
        android:layout_marginTop="5sp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/changePasswordButton"
        style="@style/ProfileButtonStyle"
        android:text="Change password"/>



    <Button
        android:id="@+id/changeEmailButton"
        style="@style/ProfileButtonStyle"
        android:text="Change email"/>


    <Button
        android:id="@+id/changeLoginButton"
        style="@style/ProfileButtonStyle"
        android:text="Change login" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checkbox"
            style="@style/ProfileTextViewThirdStyle"
            android:fontFamily="@font/nunito_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep me logged"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/keepMeLogged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!--        <Button-->
<!--            android:id="@+id/loggedOut"-->
<!--            style="@style/ProfileButtonStyle"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:text="no"-->
<!--            android:layout_weight="0" />-->

<!--        <Button-->
<!--            android:id="@+id/loggedIn"-->
<!--            style="@style/ProfileButtonStyle"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginRight="30sp"-->
<!--            android:text="yes"-->
<!--            android:layout_weight="0"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/profileAvatar"
        style="@style/ProfileLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile avatar"
        android:layout_marginTop="5sp"
        android:textColor="@color/white"
        android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/changeAvatarButton"
            style="@style/ProfileButtonStyle"
            android:text="Change avatar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
        android:id="@+id/logoutButton"
        style="@style/ProfileButtonThirdStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
            android:layout_marginBottom="-6sp"
        android:text="Log out"
        app:cornerRadius="0dp"/>
    </LinearLayout>






</LinearLayout>