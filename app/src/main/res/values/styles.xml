<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  MAIN STYLES  -->
    <style name="LogoLabelStyle">
        <item name="android:textColor">@color/white_second</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainLabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SecondLabelStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/bg_opacity</item>
    </style>

    <style name="GreyLabelStyle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_second</item>
    </style>

    <style name="SecondRedLabelStyle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainToast">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">30dp</item>
        <item name="cornerRadius">3sp</item>
    </style>


    <!--  PROFILE STYLES  -->
    <style name="ProfileTextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:ems">12</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_marginRight">20sp</item>
    </style>

    <style name="ProfileTextViewSecondStyle">
        <item name="android:textColor">@color/black_main</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:ems">6</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProfileTextViewThirdStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:ems">12</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">30sp</item>
        <item name="android:layout_marginRight">20sp</item>
    </style>

    <style name="ProfileButtonStyle">
        <item name="android:backgroundTint">@color/bg_opacity</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">30sp</item>

<!--        <item name="android:layout_marginRight">20sp</item>-->
    </style>

    <style name="ProfileButtonSecondStyle">
        <item name="android:backgroundTint">@color/main_red</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_marginRight">20sp</item>
    </style>

    <style name="ProfileButtonThirdStyle">
        <item name="android:backgroundTint">@color/bg_opacity</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
    </style>

    <style name="ProfileLabelStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:ems">12</item>
        <item name="android:gravity">left</item>

    </style>


    <!--  Avatar chooser  -->
    <style name="ImageViewStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">1sp</item>
        <item name="android:layout_marginLeft">28sp</item>
    </style>

    <style name="AvatarButtonStyle">
        <item name="android:backgroundTint">@color/bg_opacity</item>
        <item name="android:fontFamily">@font/nunito_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">40sp</item>
    </style>

    <!--  Drawer  -->
    <style name="DrawerItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="DrawerItemLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>